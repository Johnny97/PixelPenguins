
<div class="after">
  <div class="after-container text-center">
    <h2>Thanks for Registering</h2>
    <svg id="barcode"></svg>
    <p><button id="print" class="btn btn-primary">Print this barcode.</button></p>
    <div class="mt-3" id="please-login" style="display: none">
      <a href="/login">Please login :)</a>
    </div>
  </div>
</div>


<script>
  $(function() {
    $('#print').click(function () {
      window.print();
      $('#please-login').show();
    });
  })
  JsBarcode("#barcode", "<%= user.barCode %>", { displayValue: false });
</script>
